
@model FinalProject.Models.ViewModels.ProfileVM

@using (Ajax.BeginForm("changePhone", "ApplicationUsers",
     new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ChangeEmail", HttpMethod = "POST", OnSuccess = "Opencolabse()", OnFailure = "alert(Somthing Wrong)"}))
{

    @*@Html.AntiForgeryToken()*@
    <h5 class="text-center">Add Phone </h5>
    <hr />
    <div class="form-horizontal">
   
        <div class="form-group">
            @Html.LabelFor(model => model.editPhone.Phone, htmlAttributes: new { @class = "control-label ml-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.editPhone.Phone, new { htmlAttributes = new { @class = "form-control ml-4" } })
                @Html.ValidationMessageFor(model => model.editPhone.Phone, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>

}
<div class="alert-success">
    @TempData["msg"]
</div>
@Html.ActionLink("Back", "profile", "Applicationusers", null, new { @class = "actionLink ml-3" })



