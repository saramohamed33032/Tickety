
@model FinalProject.Models.ViewModels.ProfileVM


@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;

}
@using (Ajax.BeginForm("changeEmail", "Account", new { oldEmail = @Model.EditEmail.oldEmail },
    new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ChangeEmail", HttpMethod = "POST", OnSuccess = "Opencolabse()", OnFailure = "alert(Somthing Wrong)" }, null))
{
    @Html.AntiForgeryToken()
    <h5 class="text-center">Change Email </h5>
    <hr />
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                <label>Old Email: </label>

                <span class="ml-3">@Model.EditEmail.oldEmail</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EditEmail.Email, htmlAttributes: new { @class = "control-label ml-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EditEmail.Email, new { htmlAttributes = new { @class = "form-control ml-3" } })
                @Html.ValidationMessageFor(model => model.EditEmail.Email, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn" />
            </div>
        </div>
    </div>
}
<div class="alert-success">
    @TempData["msg"]
</div>
@Html.ActionLink("Back", "profile", "Applicationusers", null, new { @class = "actionLink ml-3" })