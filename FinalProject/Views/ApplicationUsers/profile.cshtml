@model FinalProject.Models.ViewModels.ProfileVM
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="profile">
    <h3 class="mt-3 mb-5 text-center">Profile</h3>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-3 settinglist">


                <div class="list-group setting" id="#myList" role="tablist">

                    <a class="list-group-item list-group-item-action active" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Profile</a>
                    <a class="list-group-item list-group-item-action" id="list-setting-list" data-toggle="list" href="#list-setting" role="tab" aria-controls="setting">setting</a>
                    <a class="list-group-item list-group-item-action" id="list-Logout-list" data-toggle="list" href="#list-Logout" role="tab" aria-controls="Logout">MyTicket</a>
                </div>


            </div>

            <div class="col-12 col-md-9 content tab-content ">
                <div class="tab-pane fade show active" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">


                    <div class="user-img text-center" id="user-img">


                        @using (Html.BeginForm("changePhoto", "ApplicationUsers", FormMethod.Post, new { enctype = "multipart/form-data", id = "b" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="file-field">
                                <div class="mb-4 mt-4">
                                    @if (Model.applicationUser.ProfileImage == null)
                                    {
                                        <img src="~/img/noimgprofile.jpg" style="border-radius: 5rem;height: 9rem;width: 9rem;" alt="User-img" /><br>
                                    }
                                    else
                                    {
                                        <img src="~/img/@Model.applicationUser.ProfileImage" style="border-radius: 5rem;height: 9rem;width: 9rem;" alt="User-img" /><br>
                                    }
                                </div>
                                <div class="d-flex justify-content-center ">
                                    <div class="btn btn-primary rounded float-left col-lg-2 col-md-4 col-sm-4 col-4 w-25" style="height:40px;">
                                        <label for="a">Add Photo</label>
                                        <input class="btn-primary rounded float-left custom-file-input " name="j" accept="image/png,image/jpeg" id="a" type="file" required>

                                    </div>
                                </div>

                            </div>
                        }



                        @*<span class="lead my-2">@Html.DisplayFor(model => model.UserName)</span><br />*@


                    </div>


                    <div class="user-data d-flex justify-content-center  my-5">
                        <form class="w-75 userDataForm">
                            <div class="row">

                                <div class="col-12 form-group">
                                    <label class="w-25 mr-2">FirstName: </label><span class="ml-3 col-sm-12 w-25">@Model.applicationUser.Frist_Name </span>
                                </div><br />
                                <div class="col-12  form-group">
                                    <label class="w-25 mr-2">Email: </label><span class="ml-3 col-sm-12 w-25">@Model.applicationUser.Email</span>
                                </div><br />
                                <div class="col-12 form-group">
                                    @if (Model.applicationUser.PhoneNumber == null)
                                    {
                                        <label class="w-25 mr-2">phone:</label> <span class="ml-3 col-sm-12 w-50"> Not-Entered</span>

                                    }
                                    else
                                    {
                                        <label class="w-25 mr-2">phone: </label><span class="ml-3 col-sm-12 w-25">@Model.applicationUser.PhoneNumber </span>
                                    }
                                </div><br />

                            </div>
                        </form>



                    </div>

                </div>


                <div class="tab-pane fade" id="list-setting" role="tabpanel" aria-labelledby="list-setting-list">

                    <div id="accordion" class="mt-5 mb-5 ml-4 mr-4">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <ul class="actionList">
                                    <li>

                                        @Ajax.ActionLink("Change email", "changeEmail", "ApplicationUsers", null, null, null, null,
                                       new AjaxOptions() { UpdateTargetId = "ChangeEmail", HttpMethod = "GET", InsertionMode = InsertionMode.Replace, OnSuccess = "Opencolabse1()", OnFailure = "alert(somthing Wrong)" }, new { @class = "actionLink" })
                                    </li>

                                    <li class="mb-0">
                                        @Ajax.ActionLink("change password", "ChangePassword", "Manage", null, null, null, null,
                                       new AjaxOptions() { UpdateTargetId = "ChangeEmail", HttpMethod = "GET", InsertionMode = InsertionMode.Replace, OnSuccess = "Opencolabse1()", OnFailure = "alert(somthing Wrong)" }, new { @class = "actionLink" })
                                    </li>

                                    @{
                                        if (Model.applicationUser.PhoneNumber == null)
                                        {

                                            <li>
                                                @Ajax.ActionLink("Add Phone", "Addphone", "ApplicationUsers", null, null, null, null,
                                               new AjaxOptions() { UpdateTargetId = "ChangeEmail", HttpMethod = "GET", InsertionMode = InsertionMode.Replace, OnSuccess = "Opencolabse1()", OnFailure = "alert(somthing Wrong)" }, new { @class = "actionLink" })
                                            </li>
                                        }
                                        else
                                        {
                                            if (!Model.applicationUser.PhoneNumberConfirmed)
                                            {
                                                <li class="mb-0">
                                                    @Ajax.ActionLink("verify phone", "verifyPhone", "ApplicationUsers", null, null, null, null,
                                                   new AjaxOptions() { UpdateTargetId = "ChangeEmail", HttpMethod = "GET", InsertionMode = InsertionMode.Replace, OnSuccess = "Opencolabse1()", OnFailure = "alert(somthing Wrong)" }, new { @class = "actionLink" })
                                                </li>
                                            }
                                            <li class="mb-0">
                                                @Ajax.ActionLink("Change Phone", "changePhone", "ApplicationUsers", null, null, null, null,
                                               new AjaxOptions() { UpdateTargetId = "ChangeEmail", HttpMethod = "GET", InsertionMode = InsertionMode.Replace, OnSuccess = "Opencolabse1()", OnFailure = "alert(somthing Wrong)" }, new { @class = "actionLink" })
                                            </li>
                                        }

                                    }
                                </ul>
                            </div>

                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body" id="ChangeEmail">
                                </div>
                            </div>
                        </div>

                    </div>

                </div>


                <div class="tab-pane fade" id="list-Logout" role="tabpanel" aria-labelledby="list-Logout-list">
                    @{
                        ApplicationDbContext db = new ApplicationDbContext();
                        var y = User.Identity.GetUserId();
                        var ticket = db.Tickets.Where(a => a.UserID == y).ToList();
                        Html.RenderPartial("~/views/ApplicationUsers/myTicket.cshtml", ticket);
                    }

                </div>
            </div>
        </div>
    </div>



</section>

@section scripts{
    <script>
        $("#a").change(function () {
            $("#b").submit()
        })
   
    </script>
}