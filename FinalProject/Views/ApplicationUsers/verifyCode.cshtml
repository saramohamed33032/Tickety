
@model FinalProject.Models.ViewModels.ProfileVM


@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;

}
@using (Ajax.BeginForm("verifyCode", "ApplicationUsers", new { phone = @TempData["phone"] },
     new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ChangeEmail", HttpMethod = "POST", OnSuccess = "Opencolabse()", OnFailure = "alert(Somthing Wrong)" }, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <br /><br /><br />
        <div class="form-group">
            @Html.LabelFor(model => model.verifyCode.verifycode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.verifyCode.verifycode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.verifyCode.verifycode, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="verify" class="btn btn-dark" />
            </div>
        </div>
    </div>

}
<div class="alert-danger">
    @TempData["msg"]
</div>
@Html.ActionLink("Back", "profile", "Applicationusers")



