<head>


    <style>
        /***********************User Ticket******************/
        .userTicketSec .userTicket div.row {
            margin-left: 10%;
            width: 82% !important;
            height: 30% !important;
            margin-top: 15%;
            background-color: rgb(233, 240, 247);
            color: black;
            font-size: 120%;
        }

        .userTicketSec .userTicket .ml-5 {
            margin-left: 4rem !important;
        }

        .userTicketSec .userTicket img {
            width: 90%;
            height: 80%;
            margin-top: 11%;
        }

        .userTicketSec .userTicket hr {
            border: thin solid black;
        }

        .userTicketSec .userTicket .printbtn {
            background-image: linear-gradient(to right,#9ba1ac, #232635) !important;
            border: #9ba1ac;
            margin-left: 595%;
            padding-left: 65%;
            padding-right: 65%;
            color: aliceblue !important;
            font-weight: 500;
        }
    </style>
</head>
@model List<Ticket>
<section class="userTicketSec">
    <div class="container userTicket mb-5">
        @foreach (var item in Model)
        {
            <div class="row" id="print">
                <div class="col-lg-4">
                    <img src="~/images/ball.jpg" />
                </div>
                <div class="col-lg-2"></div>
                <div class="col-lg-6">
                    @*stadium Name*@
                    <h3 class="mt-3 mb-2 ml-5">@item.Degree.Match.Staduim.staduimName</h3>
                    <div class="mt-3">
                        @*team1 Name*@
                        <span class="mr-5">@item.Degree.Match.HomeTeam.teamName</span>
                        @*team2 Name*@
                        <span class="ml-5">@item.Degree.Match.GuestTeam.teamName</span>
                    </div>
                    <div class="mt-3">
                        @*Date*@
                        <span class="mr-5">@item.Degree.Match.matchDate.Date.ToString("yyyy-MM-dd")</span>
                        @*Time*@
                        <span class="ml-3">@item.Degree.Match.matchTime</span>
                    </div>
                    <hr />
                    <label>SEAT: @item.Seat_Number </label><span class="mr-5">@*Seat Number*@</span>
                    <label class="ml-5">Price: @item.Degree.degreePrice </label><span>@*Price*@</span>
                </div>
            </div>
        }
        </div>
</section>