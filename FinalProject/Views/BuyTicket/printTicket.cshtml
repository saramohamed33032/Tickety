@model Ticket
<section class="userTicketSec">
    <div class="container userTicket">
        <div class="row  pb-4" id="print">
            <div class="col-md-4 mt-2">
                <img src="~/images/ball.jpg" />
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-6">
                @*stadium Name*@
                <h3 class="mt-3 mb-2 ml-5">@Model.Degree.Match.Staduim.staduimName</h3>
                <div class="mt-3">
                    @*team1 Name*@
                    <span class="mr-5">@Model.Degree.Match.HomeTeam.teamName</span>
                    @*team2 Name*@
                    <span class="ml-5">@Model.Degree.Match.GuestTeam.teamName</span>
                </div>
                <div class="mt-3">
                    @*Date*@
                    <span class="mr-5">@Model.Degree.Match.matchDate.Date.ToString("yyyy-MM-dd")</span>
                    @*Time*@
                    <span class="ml-3">@Model.Degree.Match.matchTime</span>
                </div>
                <hr />
                <label>SEAT: @Model.Seat_Number </label><span class="mr-5">@*Seat Number*@</span>
                <label class="ml-5">Price: @Model.Degree.degreePrice </label><span>@*Price*@</span><br />
                <div class="pt-3 text-center">
                @Html.ActionLink("Print", "printTicketPDF", new { id = Model.ticketID }, new { @class = "btn-lg printbtn" })
                </div>
            </div>
        </div>

    </div>
</section>
